{
  "name": "epochtalk",
  "version": "0.4.18",
  "description": "Epochtalk forum software",
  "main": "server",
  "scripts": {
    "sass": "node ./scripts/sass.js",
    "serve": "node ./scripts/serve.js",
    "build": "webpack",
    "test-client": "./node_modules/.bin/protractor protractor.config.js",
    "test": "./node_modules/.bin/mocha -R spec ./tests && dropdb --if-exists epoch_test && createdb epoch_test && psql epoch_test < ./schema.sql",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:build:api": "./node_modules/apidoc/bin/apidoc -i ./ -o apidoc-out -e node_modules -e public && node ./node_modules/apidoc-markdown/bin -t ./api-doc-template.md -p apidoc-out -o ./docs/reference/api-reference.md && rm -rf apidoc-out",
    "docs:build:all": "./node_modules/apidoc/bin/apidoc -i ./ -o apidoc-out -e node_modules -e public && node ./node_modules/apidoc-markdown/bin -t ./api-doc-template.md -p apidoc-out -o ./docs/reference/api-reference.md && rm -rf apidoc-out && vuepress build docs",
    "docs:dev:all": "./node_modules/apidoc/bin/apidoc -i ./ -o apidoc-out -e node_modules -e public && node ./node_modules/apidoc-markdown/bin -t ./api-doc-template.md -p apidoc-out -o ./docs/reference/api-reference.md && rm -rf apidoc-out && vuepress dev docs"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/epochtalk/epochtalk"
  },
  "author": "James Wang <jw@slickage.com> (http://slickage.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/epochtalk/epochtalk/issues"
  },
  "homepage": "https://github.com/epochtalk/epochtalk",
  "apidoc": {
    "title": "Epochtalk",
    "description": "Overview of Epochtalk API",
    "url": "/api"
  },
  "dependencies": {
